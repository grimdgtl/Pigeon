<%= if ui_refresh_enabled?() do %>
  <div class={["card", assigns[:class]]}>
    <%= if assigns[:title] do %>
      <div class="card-header">
        <h3 class="card-title"><%= @title %></h3>
      </div>
    <% end %>
    <%= @inner_content %>
  </div>
<% else %>
  <!-- Fallback for old UI -->
  <div class={["card", assigns[:class]]}>
    <%= if assigns[:title] do %>
      <h3 class="text-lg font-medium mb-4"><%= @title %></h3>
    <% end %>
    <%= @inner_content %>
  </div>
<% end %>

<%= if ui_refresh_enabled?() do %>
  <%= case @variant do
    :primary ->
      link(@inner_content, to: @to, method: @method, class: "btn btn-primary #{@class}")
    :secondary ->
      link(@inner_content, to: @to, method: @method, class: "btn btn-secondary #{@class}")
    :danger ->
      link(@inner_content, to: @to, method: @method, class: "btn btn-danger #{@class}")
    _ ->
      link(@inner_content, to: @to, method: @method, class: "btn btn-primary #{@class}")
  end %>
<% else %>
  <!-- Fallback for old UI -->
  <%= case @variant do
    :primary ->
      link(@inner_content, to: @to, method: @method, class: "button button--cta #{@class}")
    :secondary ->
      link(@inner_content, to: @to, method: @method, class: "button button--muted #{@class}")
    :danger ->
      link(@inner_content, to: @to, method: @method, class: "button button--warn #{@class}")
    _ ->
      link(@inner_content, to: @to, method: @method, class: "button button--cta #{@class}")
  end %>
<% end %>
